# OpenAI API 설정
OPENAI_API_KEY=your_openai_api_key_here
PROVIDER=openai

# 서버 설정
PORT=3001
NODE_ENV=development

# CORS 설정 (프로덕션 시 실제 도메인으로 변경)
# 여러 도메인은 쉼표로 구분: https://example.com,https://www.example.com
ALLOWED_ORIGINS=https://yourdomain.com

# 안전 정책 활성화 여부
ENABLE_SAFETY=true

# Redis 설정 (향후 세션 저장용, 선택사항)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# 로깅 레벨 (error, warn, info, debug)
LOG_LEVEL=info
